# ========================================
# NPM Configuration
# Documentation: https://docs.npmjs.com/cli/v10/configuring-npm/npmrc
# ========================================

# ===========================
# Security Settings
# ===========================

# Require package signatures
audit=true
audit-level=moderate

# Prevent executing arbitrary scripts
ignore-scripts=false

# ===========================
# Performance & Caching
# ===========================

# Enable progress bar
progress=true

# Timeout settings (30 seconds)
fetch-timeout=30000
fetch-retry-mintimeout=2000
fetch-retry-maxtimeout=10000

# Cache settings
prefer-offline=false
prefer-online=true

# ===========================
# Package Management
# ===========================

# Save exact versions by default
save-exact=false
save-prefix=^

# Engine strict mode
engine-strict=false

# Package lock
package-lock=true
package-lock-only=false

# ===========================
# Installation Behavior
# ===========================

# Fund messages
fund=true

# Update notifier
update-notifier=true

# Legacy peer deps (set to false for strict dep resolution)
legacy-peer-deps=false

# ===========================
# Logging & Output
# ===========================

# Log level (silent, error, warn, notice, http, info, verbose, silly)
loglevel=notice

# Color output
color=true

# Unicode output
unicode=true
