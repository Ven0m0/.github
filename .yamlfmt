# ========================================
# yamlfmt Configuration
# Documentation: https://github.com/google/yamlfmt
# ========================================
# Note: yamlfmt is a Google-maintained YAML formatter
# Complements yamllint (linter) and provides formatting
# ========================================

# Formatter settings
formatter:
  type: basic
  retain_line_breaks: true
  disallow_anchors: false
  max_line_length: 120
  scan_folded_as_literal: true
  indentless_arrays: false
  drop_merge_tag: false
  pad_line_comments: 2
  trim_trailing_whitespace: true
  eof_newline: true

# Include/exclude patterns
include:
  - "**/*.yaml"
  - "**/*.yml"

exclude:
  - "**/node_modules/**"
  - "**/.git/**"
  - "**/.cache/**"
  - "**/.claude/**"
  - "**/.venv/**"
  - "**/venv/**"
  - "**/dist/**"
  - "**/build/**"
  - "**/coverage/**"
  - "**/megalinter-reports/**"
  - "**/package-lock.json"
  - "**/yarn.lock"
  - "**/pnpm-lock.yaml"

# Line formatting
line_ending: lf

# Indentation
indent: 2

# Array formatting
array_formatting:
  retain_style: true

# Map formatting
map_formatting:
  retain_style: true
